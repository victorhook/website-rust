package inl3;

import java.awt.Color;

public class Test {

	public static void main(String[] args) {
		
	       Color[] colors = new Color[Mandelbrot.MANTELBROT_ITERATIONS];
	       int red, green, blue, index = 0;

	       for (int redIndex = 0; redIndex < Mandelbrot.MANTELBROT_ITERATIONS / 3; redIndex++) {
	    	
	    	   for (int greenIndex = 0; greenIndex < Mandelbrot.MANTELBROT_ITERATIONS / 3; greenIndex++) {
		    	
	    		   for (int blueIndex = 0; blueIndex < Mandelbrot.MANTELBROT_ITERATIONS / 3; blueIndex++) {

	    			   colors[index] = Color.getHSBColor(255 * (redIndex / Mandelbrot.MANTELBROT_ITERATIONS),
								    					 255 * (greenIndex / Mandelbrot.MANTELBROT_ITERATIONS),
								    					 255 * (blueIndex / Mandelbrot.MANTELBROT_ITERATIONS));
	    			   
	    	       }
		       }
	       }
	       
	       for (Color c : colors) {
	    	   System.out.println(c);
	       }
	       
	       
	}
	
	static String byteToHex(byte red, byte green, byte blue) {
		StringBuilder sb = new StringBuilder();
		sb.append(String.format("%02X", red));
		sb.append(String.format("%02X", green));
		sb.append(String.format("%02X", blue));
		return sb.toString();
	}

}
