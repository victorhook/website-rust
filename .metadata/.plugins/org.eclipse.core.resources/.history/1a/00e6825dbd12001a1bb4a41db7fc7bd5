package inl3;

import java.awt.Color;

public class Test {

	public static void main(String[] args) {
		
	       Color[] colors = new Color[Mandelbrot.MANTELBROT_ITERATIONS];

	       int stepSize = Mandelbrot.MANTELBROT_ITERATIONS / 8;
	       int index = 0;
	       
	       for (int red = 0; red < 255; red += stepSize) {
	    	   colors[index++] = Color.getHSBColor((float) red, 0f, 0f);
	       }
	       for (int green = 0; green < 255; green += stepSize) {
	    	   colors[index++] = Color.getHSBColor(0f, 0f, (float) green);
	       }
	       for (int blue = 0; blue < 255; blue += stepSize) {
	    	   colors[index++] = Color.getHSBColor(0f, 0f, (float) blue);
	       }
	       for (int red = 0; red < 255; red += stepSize) {
	    	   colors[index++] = Color.getHSBColor((float) red, 0f, 0f);
	       }
	       for (int red = 0; red < 255; red += stepSize) {
	    	   colors[index++] = Color.getHSBColor((float) red, 0f, 0f);
	       }
	       for (int red = 0; red < 255; red += stepSize) {
	    	   colors[index++] = Color.getHSBColor((float) red, 0f, 0f);
	       }
	       
	       
	       
	       /**
	        * 0 0 0
	        * 255 0 0
	        * 0 255 0
	        * 0 0 255
	        * 255 255 0
	        * 255 255 255
	        * 0 255 255
	        * 255 0 255
	        */
	       
	       
	}
	
	static String byteToHex(byte red, byte green, byte blue) {
		StringBuilder sb = new StringBuilder();
		sb.append(String.format("%02X", red));
		sb.append(String.format("%02X", green));
		sb.append(String.format("%02X", blue));
		return sb.toString();
	}

}
